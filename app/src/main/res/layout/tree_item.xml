<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:onClick="getTree">

    <TextView
        android:id="@+id/ranking"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textColor="#DD2C00"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ranking" />

    <TextView
        android:id="@+id/commonName"
        android:layout_width="307dp"
        android:layout_height="42dp"
        android:layout_marginLeft="0dp"
        android:textColor="#263238"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/ranking"
        tools:layout_editor_absoluteY="16dp"
        tools:text="commonName" />

    <TextView
        android:id="@+id/latinName"
        android:layout_width="307dp"
        android:layout_height="25dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:textColor="#263238"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintLeft_toRightOf="@+id/ranking"
        app:layout_constraintTop_toBottomOf="@+id/commonName"
        tools:text="latinName" />
</android.support.constraint.ConstraintLayout>